{
  "info": {
    "name": "Railway Deployment Tests",
    "description": "Test suite for the distributed notification system deployed on Railway",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "https://hng13internship-production-a451.up.railway.app",
      "type": "string"
    },
    {
      "key": "user_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "template_code",
      "value": "",
      "type": "string"
    },
    {
      "key": "notification_id",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health & Monitoring",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/health",
              "host": ["{{base_url}}"],
              "path": ["health"]
            }
          }
        },
        {
          "name": "API Root",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/",
              "host": ["{{base_url}}"],
              "path": [""]
            }
          }
        },
        {
          "name": "Get Metrics",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/metrics",
              "host": ["{{base_url}}"],
              "path": ["metrics"]
            }
          }
        }
      ]
    },
    {
      "name": "User Management",
      "item": [
        {
          "name": "Create User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    if (response.data && response.data.id) {",
                  "        pm.collectionVariables.set('user_id', response.data.id);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"testuser{{$randomInt}}@example.com\",\n  \"password\": \"Test@1234\",\n  \"preferences\": {\n    \"email\": true,\n    \"push\": true\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/users",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "users"]
            }
          }
        },
        {
          "name": "List Users",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/users?page=1&limit=10",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "users"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Get User by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/users/{{user_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "users", "{{user_id}}"]
            }
          }
        },
        {
          "name": "Update User",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"push_token\": \"test-fcm-token-{{$randomInt}}\",\n  \"preferences\": {\n    \"email\": true,\n    \"push\": false\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/users/{{user_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "users", "{{user_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Template Management",
      "item": [
        {
          "name": "Create Email Template",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    if (response.data && response.data.code) {",
                  "        pm.collectionVariables.set('template_code', response.data.code);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Welcome Email\",\n  \"code\": \"welcome_email_{{$randomInt}}\",\n  \"type\": \"email\",\n  \"subject\": \"Welcome to Our Platform, {{name}}!\",\n  \"content\": \"Hello {{name}},\\n\\nWelcome to our platform! Click here to get started: {{link}}\\n\\nBest regards,\\nThe Team\",\n  \"variables\": [\"name\", \"link\"],\n  \"language\": \"en\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/templates",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "templates"]
            }
          }
        },
        {
          "name": "List Templates",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/templates?page=1&limit=10",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "templates"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Get Template by Code",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/templates/{{template_code}}",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "templates", "{{template_code}}"]
            }
          }
        },
        {
          "name": "Create Push Template",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Push Notification Template\",\n  \"code\": \"push_notification_{{$randomInt}}\",\n  \"type\": \"push\",\n  \"subject\": \"New Update Available\",\n  \"content\": \"Hey {{name}}, check out the latest update!\",\n  \"variables\": [\"name\"],\n  \"language\": \"en\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/templates",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "templates"]
            }
          }
        }
      ]
    },
    {
      "name": "Notifications",
      "item": [
        {
          "name": "Send Email Notification",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 202) {",
                  "    const response = pm.response.json();",
                  "    if (response.data && response.data.notification_id) {",
                  "        pm.collectionVariables.set('notification_id', response.data.notification_id);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"notification_type\": \"email\",\n  \"user_id\": \"{{user_id}}\",\n  \"template_code\": \"{{template_code}}\",\n  \"variables\": {\n    \"name\": \"Test User\",\n    \"link\": \"https://example.com/welcome\"\n  },\n  \"request_id\": \"req-{{$timestamp}}-{{$randomInt}}\",\n  \"priority\": 1,\n  \"metadata\": {\n    \"campaign\": \"onboarding\",\n    \"source\": \"postman-test\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/notifications",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "notifications"]
            }
          }
        },
        {
          "name": "Send Push Notification",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"notification_type\": \"push\",\n  \"user_id\": \"{{user_id}}\",\n  \"template_code\": \"{{template_code}}\",\n  \"variables\": {\n    \"name\": \"Test User\",\n    \"link\": \"https://example.com/app\"\n  },\n  \"request_id\": \"req-{{$timestamp}}-{{$randomInt}}\",\n  \"priority\": 2,\n  \"metadata\": {\n    \"campaign\": \"push-test\",\n    \"source\": \"postman-test\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/notifications",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "notifications"]
            }
          }
        },
        {
          "name": "Get Notification Status",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/notifications/{{notification_id}}/status",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "notifications", "{{notification_id}}", "status"]
            }
          }
        },
        {
          "name": "Send High Priority Notification",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"notification_type\": \"email\",\n  \"user_id\": \"{{user_id}}\",\n  \"template_code\": \"{{template_code}}\",\n  \"variables\": {\n    \"name\": \"Test User\",\n    \"link\": \"https://example.com/urgent\"\n  },\n  \"request_id\": \"req-{{$timestamp}}-{{$randomInt}}\",\n  \"priority\": 10,\n  \"metadata\": {\n    \"campaign\": \"urgent\",\n    \"source\": \"postman-test\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/notifications",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "notifications"]
            }
          }
        }
      ]
    },
    {
      "name": "Error Handling Tests",
      "item": [
        {
          "name": "Invalid User ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/users/invalid-uuid",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "users", "invalid-uuid"]
            }
          }
        },
        {
          "name": "Non-existent Endpoint",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/nonexistent",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "nonexistent"]
            }
          }
        },
        {
          "name": "Invalid Notification Type",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
