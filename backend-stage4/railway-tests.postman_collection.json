              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"notification_type\": \"invalid_type\",\n  \"user_id\": \"{{user_id}}\",\n  \"template_code\": \"{{template_code}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/notifications",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "notifications"]
            }
          }
        },
        {
          "name": "Missing Required Fields",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test User\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/users",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "users"]
            }
          }
        }
      ]
    }
  ]
}
