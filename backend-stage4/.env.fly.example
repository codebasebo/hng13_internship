# Replace placeholders with your Fly app names.

# Internal service URLs (use your actual app names; .internal is Fly's private DNS)
USER_SERVICE_URL=http://REPLACE_USER_SERVICE_APP.internal:3001
TEMPLATE_SERVICE_URL=http://REPLACE_TEMPLATE_SERVICE_APP.internal:3002
EMAIL_SERVICE_URL=http://REPLACE_EMAIL_SERVICE_APP.internal:3003
PUSH_SERVICE_URL=http://REPLACE_PUSH_SERVICE_APP.internal:3004

# RabbitMQ & Redis (private network)
RABBITMQ_URL=amqp://admin:admin@REPLACE_RABBITMQ_APP.internal:5672
REDIS_URL=redis://REPLACE_REDIS_APP.internal:6379

# JWT and SMTP (set as Fly secrets)
JWT_SECRET=YOUR_RANDOM_32B_KEY
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-gmail-app-password
SMTP_FROM=Notification System <noreply@notifications.com>

# Push (optional)
FCM_SERVER_KEY=your-fcm-server-key

# Ports (keep defaults)
PORT=3000
USER_SERVICE_PORT=3001
TEMPLATE_SERVICE_PORT=3002
EMAIL_SERVICE_PORT=3003
PUSH_SERVICE_PORT=3004