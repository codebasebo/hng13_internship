# API Gateway
PORT=3000
NODE_ENV=development

# User Service
USER_SERVICE_PORT=3001
USER_SERVICE_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/user_service

# Template Service
TEMPLATE_SERVICE_PORT=3002
TEMPLATE_SERVICE_DATABASE_URL=postgresql://postgres:postgres@localhost:5433/template_service

# Email Service
EMAIL_SERVICE_PORT=3003
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=Notification System <noreply@notifications.com>

# Push Service
PUSH_SERVICE_PORT=3004
FCM_SERVER_KEY=your-fcm-server-key-here

# RabbitMQ
RABBITMQ_URL=amqp://admin:admin@localhost:5672
RABBITMQ_USER=admin
RABBITMQ_PASS=admin

# Redis
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY=24h

# Service URLs (for inter-service communication)
USER_SERVICE_URL=http://localhost:3001
TEMPLATE_SERVICE_URL=http://localhost:3002
EMAIL_SERVICE_URL=http://localhost:3003
PUSH_SERVICE_URL=http://localhost:3004
