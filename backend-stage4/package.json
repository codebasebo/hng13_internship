{
  "name": "distributed-notification-system",
  "version": "1.0.0",
  "description": "Microservices-based distributed notification system with message queues",
  "main": "index.js",
  "scripts": {
    "build": "tsc --build",
    "clean": "tsc --build --clean",
    "dev:gateway": "ts-node-dev --respawn --transpile-only services/api-gateway/src/index.ts",
    "dev:user": "ts-node-dev --respawn --transpile-only services/user-service/src/index.ts",
    "dev:email": "ts-node-dev --respawn --transpile-only services/email-service/src/index.ts",
    "dev:push": "ts-node-dev --respawn --transpile-only services/push-service/src/index.ts",
    "dev:template": "ts-node-dev --respawn --transpile-only services/template-service/src/index.ts",
    "start:gateway": "node dist/api-gateway/index.js",
    "start:user": "node dist/user-service/index.js",
    "start:email": "node dist/email-service/index.js",
    "start:push": "node dist/push-service/index.js",
    "start:template": "node dist/template-service/index.js",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"**/*.{ts,json,md}\""
  },
  "keywords": [
    "microservices",
    "notification",
    "rabbitmq",
    "redis",
    "postgresql"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "amqplib": "^0.10.4",
    "axios": "^1.7.7",
    "bcryptjs": "^3.0.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-rate-limit": "^7.4.1",
    "express-validator": "^7.2.0",
    "handlebars": "^4.7.8",
    "helmet": "^8.0.0",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.15",
    "pg": "^8.13.1",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.5",
    "uuid": "^11.0.2",
    "winston": "^3.15.0"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.5",
    "@types/bcryptjs": "^3.0.0",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.8.6",
    "@types/nodemailer": "^6.4.16",
    "@types/pg": "^8.11.10",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.12.2",
    "@typescript-eslint/parser": "^8.12.2",
    "eslint": "^9.13.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3"
  }
}
