# Dockerfile.railway
FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package.json pnpm-lock.yaml pnpm-workspace.yaml tsconfig.json ./

# Copy source code
COPY shared ./shared
COPY services ./services

# Install and build
RUN npm install -g pnpm && pnpm install --frozen-lockfile
RUN pnpm build

EXPOSE 3000
CMD ["node", "dist/services/api-gateway/src/index.js"]